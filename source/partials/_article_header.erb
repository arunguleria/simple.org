<% author = get_contributor_by_name current_page.data.author %>
<% if current_page.data.cover_image_path %>
  <div class="article-cover">
    <img
      class="lazyload"
      src="<%= current_page.data.cover_image_placeholder_path %>"
      data-src="<%= current_page.data.cover_image_path %>"
      alt="<%= current_page.data.cover_image_alt %>"
    >
  </div>
<% end %>
<div class="article-header">
  <div class="article-header--details">
    <h4>
      <%= current_page.date.strftime('%d %B %Y') %>
    </h4>
    <h4>
      <%= current_page.data.reading_time %> min read
    </h4>
  </div>
  <h1 class="intro">
    <%= current_page.data.title %>
  </h1>
  <p class="brief global">
    <%= current_page.data.intro %>
  </p>
  <div class="person--blog">
    <img
      class="person--photo"
      src="<%= author.image_path %>"
      alt="<%= author.name %>"
    >
    <div class="person--details">
      <h3>
        <a href="<%= author.social_media_path %>">
          <%= author.name %>
        </a>
      </h3>
      <h5>
        <%= t(author.role) %>, <%= t(author.country) %>
      </h5>
    </div>
  </div>
</div>