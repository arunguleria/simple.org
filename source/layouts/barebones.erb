<!doctype html>
<html>
<head>
  <!-- Google Analytics
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-121312461-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-121312461-1');
  </script>
    
  <!-- Font Awesome
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <script src="https://kit.fontawesome.com/72c701f5ae.js" crossorigin="anonymous"></script>

  <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta charset="utf-8">
  <!-- Use the title from a page's frontmatter if it has one -->
  <title><%= current_page.data.title %> <%= t(:simple) %></title>
  <meta name="description" content="<%= t(:intro) %>">
  <meta name="author" content="<%= t(:simple) %>">

  <!-- Browser/Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Open Graph Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta property="og:url"                content="http://www.simple.org/" />
  <meta property="og:type"               content="article" />
  <meta property="og:title"              content="<%= current_page.data.title %>: Simple.org" />
  <meta property="og:description"        content="<%= t(:intro) %>" />
  <meta property="og:image"              content="https://simple.org/images/social-screens.jpg" />

  <!-- CSS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <%= stylesheet_link_tag "site" %>
  <style type="text/css">

      <% if lang != :en %>
        h3 {
              font-weight: 900;
              font-size: 22px;
          }
      <% end %>


  </style>
    
  <!-- Fix for Flash of Unstyled Content
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->    
  <style type="text/css">
    .hidden {display:none;}
  </style>
  <script type="text/javascript" src="/scripts/jquery.js"></script>
  <script type="text/javascript">
    $('html').addClass('hidden');
    $(document).ready(function() {    
        $(window).on('load', function () {...});
      $('html').show();  
     });  
   </script>

  <!-- FONT
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <% if lang == :hi %>
    <link href="https://fonts.googleapis.com/css?family=Hind" rel="stylesheet">
    <style type="text/css">
        body {
            font-family: Hind, sans-serif;
        }
    </style>
  <% end %>

  <!-- JS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <!-- <%= javascript_include_tag "site" %> -->

  <!-- Favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="icon" type="image/png" href="/images/favicon.png">

</head>
<body class="<%= t(:lang) %> body-<%= global_current_url %>">
    
    <div class="barebones-wrapper">
        <nav style="position: relative;">
            <div style="float: right; font-size: 85%; color: #999; font-weight: normal; padding-top: 3px;">* All data is fake</div>
            <a href="<%= localized_url("/") %>"><i class="fas fa-arrow-left" style="margin-right: 6px;"></i> Back to Simple.org</a>
        </nav>
        
        <%= yield %>
    </div>
    
</body>
</html>
